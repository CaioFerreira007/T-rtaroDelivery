# Etapa 1: Build da aplicação com SDK do .NET 8
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copia o arquivo da solution e os arquivos de projeto primeiro
COPY ["T-rtaroDelivery.sln", "."]
COPY ["TartaroAPI/TartaroAPI.csproj", "TartaroAPI/"]

# Restaura as dependências para toda a solution
RUN dotnet restore "T-rtaroDelivery.sln"

# Copia todo o resto do código e publica a aplicação
COPY . .
WORKDIR "/src/TartaroAPI"
RUN dotnet publish "TartaroAPI.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Etapa 2: Imagem final de produção com ASP.NET 8
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TartaroAPI.dll"]
