# Etapa 1: Build com SDK do .NET 8
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY ["T-rtaroDelivery.sln", "."]
COPY ["TartaroAPI/TartaroAPI.csproj", "TartaroAPI/"]
RUN dotnet restore "T-rtaroDelivery.sln"

COPY . .
WORKDIR "/src/TartaroAPI"
RUN dotnet build "TartaroAPI.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "TartaroAPI.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Etapa 2: Imagem final com ASP.NET 8
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TartaroAPI.dll"]
