# Use a imagem base do .NET SDK para build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copie os arquivos de projeto
COPY TartaroAPI/*.csproj TartaroAPI/
RUN dotnet restore TartaroAPI/

# Copie todo o código fonte
COPY TartaroAPI/ TartaroAPI/

# Faça o build da aplicação
RUN dotnet publish TartaroAPI/ -c Release -o out

# Use a imagem runtime do .NET
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

# Copie os arquivos publicados
COPY --from=build /app/out .

# Exponha a porta
EXPOSE 80

# Configure variáveis de ambiente
ENV ASPNETCORE_URLS=http://+:80

# Configure o comando de entrada
ENTRYPOINT ["dotnet", "TartaroAPI.dll"]