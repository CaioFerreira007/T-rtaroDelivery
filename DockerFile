# Use a imagem base do .NET SDK para build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copie os arquivos de projeto
COPY TártaroAPI/*.csproj TártaroAPI/
RUN dotnet restore TártaroAPI/

# Copie todo o código fonte
COPY TártaroAPI/ TártaroAPI/

# Faça o build da aplicação
RUN dotnet publish TártaroAPI/ -c Release -o out

# Use a imagem runtime do .NET
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app

# Copie os arquivos publicados
COPY --from=build /app/out .

# Exponha a porta
EXPOSE 80
EXPOSE 443

# Configure o comando de entrada
ENTRYPOINT ["dotnet", "TártaroAPI.dll"]